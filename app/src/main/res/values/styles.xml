<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomButton">
        <item name="android:width">300dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="CustomFormTextView">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/rounded_textview</item>
        <item name="android:ems">10</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="TextViewForm">
        <item name="android:background">@drawable/rounded_textview</item>
        <item name="android:ems">10</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:hint">Texto</item>
    </style>

    <style name="TextViewInfoForm">
        <item name="android:background">@drawable/description_text</item>
        <item name="android:ems">10</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="DescriptionBox">
        <item name="android:background">@drawable/description_text</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:ems">10</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="fullscreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
