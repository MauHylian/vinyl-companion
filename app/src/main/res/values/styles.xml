<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomButton">
        <item name="android:width">300dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">44dp</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:backgroundTint">#D5D5D5D5</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="CustomFormTextView">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/rounded_textview</item>
        <item name="android:ems">10</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="TextViewForm">
        <item name="android:background">@drawable/rounded_textview</item>
        <item name="android:ems">10</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:hint">Texto</item>
    </style>
</resources>
